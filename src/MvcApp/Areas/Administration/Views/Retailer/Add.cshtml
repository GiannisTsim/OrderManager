@model OrderManager.MvcApp.Areas.Administration.Models.Retailer.AddViewModel
@{
    ViewData["Title"] = "New retailer form";
}

<div class="col-lg-6 offset-lg-3">

    <h3>Add new retailer</h3>

    <form autocomplete="off" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="AddInput.VatId" class="form-control"/>
            <label asp-for="AddInput.VatId"></label>
            <span asp-validation-for="AddInput.VatId"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="AddInput.Name" class="form-control"/>
            <label asp-for="AddInput.Name" class="form-label"></label>
            <span asp-validation-for="AddInput.Name"></span>
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>
    </form>

    <a asp-action="Index">Back to List</a>

    @section Scripts {
        <partial name="_ValidationScriptsPartial.cshtml"/>
    }

</div>