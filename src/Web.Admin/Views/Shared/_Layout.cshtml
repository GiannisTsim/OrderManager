<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>@ViewData["Title"] - Web.Admin</title>
    <link href="~/lib/bootstrap-5.3.3/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap-icons-1.11.3/bootstrap-icons.min.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/css/site.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/OrderManager.Web.Admin.styles.css" rel="stylesheet"/>
</head>
<body>
<header>
    <nav class="bg-white border-bottom box-shadow mb-3 navbar navbar-expand-sm navbar-light navbar-toggleable-sm">
        <div class="container">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand">Web.Admin</a>
            <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target=".navbar-collapse"
                    data-bs-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse d-sm-inline-flex justify-content-between navbar-collapse">
                <ul class="flex-grow-1 navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link text-dark">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Retailer" class="nav-link text-dark">Retailer</a>
                    </li>
                </ul>
                <partial name="_SelectLanguagePartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main class="pb-3" role="main">
        <partial name="_StatusMessages"/>
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - OrderManager
    </div>
</footer>

<script src="~/lib/bootstrap-5.3.3/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/htmx-2.0.1/htmx.min.js"></script>
<script src="~/lib/hyperscript-0.9.12/_hyperscript.min.js"></script>
<script asp-append-version="true" src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>